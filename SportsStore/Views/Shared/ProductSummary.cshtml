@model Product

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/lib/Images/1.jpg" class="card-img-top" alt="product">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <span class="badge badge-pill badge-primary" style="float:right"><small>@Model.Price.ToString("c")</small></span>
                <p class="card-text">@Model.Description</p>
                <form id="@Model.ProductID" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="ProductID" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">Add To Cart</button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>